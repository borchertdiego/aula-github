package entities;

public class Student {

	public String name;
	public double noteOne, noteTwo, noteThree;
	
	public double finalNote() {
		
		return noteOne + noteTwo + noteThree;
	}
	
	public String toString() {
		
		if (finalNote() < 60) {
			
			return "FINAL GRADE = " 
				 + finalNote() 
				 + "\nFAILED"
				 + "\nMISSING "
				 + String.format("%.2f", (60 - finalNote()))
				 + " POINTS";
		}
		
		return "FINAL GRADE = " + finalNote() + "\nPASS";
	}
}
